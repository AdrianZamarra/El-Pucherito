<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ttt.elpucherito">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activities.users.ModifyProfile" android:screenOrientation="portrait" />
        <activity android:name=".activities.shoppingcart.CheckoutActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.restaurants.RestaurantsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.restaurant.RestaurantActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.users.SignActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.shoppingcart.ShoppingCartActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.shoppingcart.OrderActivity" android:screenOrientation="portrait"/>
        <activity android:name=".activities.users.LoginActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>