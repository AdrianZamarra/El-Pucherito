<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurant_dish_card1"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_dish_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="@string/test_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/restaurant_dish_description"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal|center_vertical"
                android:maxWidth="300dp"
                android:text="@string/test_description" />

            <Button
                android:id="@+id/restaurant_dish_buy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_login"
                android:gravity="center|center_horizontal"
                android:maxHeight="20dp"
                android:text="@string/test_price" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>